                // Verifica se o item não possui roles ou se intersecta com os papéis do usuário
                if (item.Roles == null || !item.Roles.Any() || item.Roles.Intersect(userRoles).Any())
                {
                    filteredItems.Add(new MainMenuItems(item));
                }
            }
        }

