    private List<MainMenuItems> FilterMenuItems(List<MainMenuItems> allMenuItems, IEnumerable<string> userRoles)
    {
        var filteredItems = new List<MainMenuItems>();

        foreach (var item in allMenuItems)
        {
            if (item.Children != null && item.Children.Any())
            {
                // Recursivamente filtra os filhos
                var filteredChildren = FilterMenuItems(item.Children.ToList(), userRoles);

                // Se algum filho for visível, o pai também deve ser visível
