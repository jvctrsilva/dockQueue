@page "/operadores"
@using DockQueue.Client.ViewModels
@using DockQueue.Application.DTOs
@inject UserViewModel UserVM
@attribute [Authorize(Policy = "Screen:UsersView")]


<PageTitle>Pessoas</PageTitle>

<section class="boxes-page">
    <div class="login-container">
        <div class="login-card" style="max-width:820px;width:100%">
            <div class="login-brand">
                <div class="login-logo">PE</div>
                <h1 class="login-title">Gerenciar Pessoas</h1>
            </div>

            <!-- Formulário: model é o Form do ViewModel -->
            <EditForm Model="UserVM.Form" OnValidSubmit="AddPerson">
                <DataAnnotationsValidator />

                <div class="login-field">
                    <label for="nome">Nome</label>
                    <InputText id="nome" class="login-input" @bind-Value="UserVM.Form.Nome" />
                    <ValidationMessage For="() => UserVM.Form.Nome" />
                </div>

                <div class="login-field">
                    <label for="login">Login (e-mail)</label>
                    <InputText id="login" class="login-input" @bind-Value="UserVM.Form.Login" />
                    <ValidationMessage For="() => UserVM.Form.Login" />
                </div>

                <div class="login-field">
                    <label for="senha">Senha</label>
                    <InputText id="senha" type="password" class="login-input" @bind-Value="UserVM.Form.Senha" />
                    <ValidationMessage For="() => UserVM.Form.Senha" />
                </div>

                <div class="login-field">
                    <label for="role">Perfil</label>
                    <InputSelect id="role" class="login-input" @bind-Value="UserVM.Form.Role">
                        <option value="OPERADOR">OPERADOR</option>
                        <option value="ADMIN">ADMIN</option>
                    </InputSelect>
                </div>

                <button type="submit" class="login-button">Adicionar</button>
            </EditForm>

            <div style="height:12px"></div>

            <div class="login-field">
                <label>Pessoas</label>

                @if (UserVM.IsLoading)
                {
                    <p>Carregando...</p>
                }
                else if (!string.IsNullOrEmpty(UserVM.ErrorMessage))
                {
                    <p style="color:#ef4444">@UserVM.ErrorMessage</p>
                }
                else if (UserVM.Users.Count == 0)
                {
                    <div class="box-item empty">Nenhuma pessoa cadastrada.</div>
                }
                else
                {
                    <div class="box-list">
                        @foreach (var p in UserVM.Users)
                        {
                            <div class="box-item">
                                <div class="box-meta">
                                    <div class="box-code">@p.Name</div>
                                    <div class="box-desc">Login: @p.Email</div>
                                </div>

                                <!-- Remover desabilitado por enquanto (sem endpoint) -->
                                <button class="box-remove" @onclick="(() => RemovePerson(p))">Remover</button>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UserVM.LoadAsync(); // busca usuários na API
    }

    private async Task AddPerson()
    {
        await UserVM.AddUserAsync();
        StateHasChanged();
    }

    private async Task RemovePerson(UserDto p)
    {
        // (opcional) confirmação simples
        if (await JS.InvokeAsync<bool>("confirm", $"Remover {p.Name}?"))
        {
            await UserVM.RemoveUserAsync(p);
            StateHasChanged();
        }
    }
    [Inject] IJSRuntime JS { get; set; } = default!;

}

<style>
    .box-list {
        display: flex;
        flex-direction: column;
        gap: 10px
    }

    .box-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px;
        border: 1px solid var(--input-border);
        border-radius: 12px;
        background: var(--default-background)
    }

        .box-item.empty {
            justify-content: center;
            color: var(--text-muted)
        }

    .box-meta {
        display: flex;
        flex-direction: column;
        gap: 2px
    }

    .box-code {
        font-weight: 700;
        color: var(--primary-color)
    }

    .box-desc {
        color: #cbd5e1
    }

    .box-remove {
        height: 36px;
        padding: 0 12px;
        border: 0;
        border-radius: 10px;
        background: linear-gradient(135deg,#ef4444,#f59e0b);
        color: #0b1220;
        font-weight: 700;
        cursor: not-allowed;
        opacity: .6
    }
</style>
