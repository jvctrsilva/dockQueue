@page "/boxes"

<PageTitle>Boxes</PageTitle>

<section class="boxes-page">
    <div class="login-container">
        <div class="login-card" style="max-width:720px;width:100%">
            <div class="login-brand">
                <div class="login-logo">BX</div>
                <h1 class="login-title">Gerenciar Box</h1>
            </div>

            <EditForm Model="boxForm" OnValidSubmit="AddBox">
                <DataAnnotationsValidator />
                <div class="login-field">
                    <label>Próximo código</label>
                    <input class="login-input" value="@NextCodePreview" disabled />
                </div>

                <div class="login-field">
                    <label for="desc">Descrição</label>
                    <InputText id="desc" class="login-input" @bind-Value="boxForm.Description" />
                    <ValidationMessage For="() => boxForm.Description" />
                </div>

                <button type="submit" class="login-button">Adicionar</button>
            </EditForm>

            <div style="height:12px"></div>

            <div class="login-field">
                <label>Boxes</label>
                <div class="box-list">
                    @if (boxes.Count == 0)
                    {
                        <div class="box-item empty">Nenhum box cadastrado.</div>
                    }
                    else
                    {
                        @foreach (var item in boxes)
                        {
                            <div class="box-item">
                                <div class="box-meta">
                                    <div class="box-code">@item.Code</div>
                                    <div class="box-desc">@item.Description</div>
                                </div>
                                <button class="box-remove" @onclick="(() => RemoveBox(item))">Remover</button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private List<BoxItem> boxes = new();

    private class BoxItem
    {
        public string Code { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
    }

    private class BoxForm
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Campo obrigatório.")]
        [System.ComponentModel.DataAnnotations.MinLength(2, ErrorMessage = "Mínimo 2 caracteres.")]
        public string Description { get; set; } = string.Empty;
    }

    private BoxForm boxForm = new();

    protected override void OnInitialized()
    {
        boxes = new List<BoxItem>
        {
            new BoxItem { Code = "BOX0001", Description = "Box de Teste A" },
            new BoxItem { Code = "BOX0002", Description = "Box de Teste B" },
            new BoxItem { Code = "BOX0003", Description = "Box de Teste C" },
            new BoxItem { Code = "BOX0004", Description = "Box de Teste D" },
        };
    }

    private string NextCodePreview => GenerateNextCode();

    private async Task AddBox()
    {
        var code = GenerateNextCode();
        boxes.Add(new BoxItem
        {
            Code = code,
            Description = boxForm.Description.Trim()
        });

        boxForm = new BoxForm();
        await InvokeAsync(StateHasChanged);
    }

    private void RemoveBox(BoxItem item)
    {
        boxes.Remove(item);
    }

    private string GenerateNextCode()
    {
        // Find highest numeric suffix and increment
        var max = 0;
        foreach (var b in boxes)
        {
            if (b.Code?.StartsWith("BOX") == true && b.Code.Length >= 7)
            {
                var part = b.Code.Substring(3);
                if (int.TryParse(part, out var n))
                {
                    if (n > max) max = n;
                }
            }
        }
        var next = max + 1;
        return $"BOX{next.ToString("D4")}";
    }
}

<style>
    .box-list {
        display: flex;
        flex-direction: column;
        gap: 10px
    }

    .box-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px;
        border: 1px solid var(--input-border);
        border-radius: 12px;
        background: var(--default-background)
    }

        .box-item.empty {
            justify-content: center;
            color: var(--text-muted)
        }

    .box-meta {
        display: flex;
        flex-direction: column;
        gap: 2px
    }

    .box-code {
        font-weight: 700;
        color: var(--primary-color)
    }

    .box-desc {
        color: #cbd5e1
    }

    .box-remove {
        height: 36px;
        padding: 0 12px;
        border: 0;
        border-radius: 10px;
        background: linear-gradient(135deg,#ef4444,#f59e0b);
        color: #0b1220;
        font-weight: 700;
        cursor: pointer
    }

        .box-remove:hover {
            filter: brightness(1.05)
        }
</style>

