@page "/"
@using DockQueue.Client.Services
@using DockQueue.Client.ViewModels

@layout CustomLayout
@inject SweetAlertService Swal
@inject NavigationManager _nav
@inject LoginViewModel LoginViewModel
@inject AuthService AuthService

<PageTitle>Login</PageTitle>

<section class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-brand">
                <div class="login-logo">DQ</div>
                <h1 class="login-title">DockQueue</h1>
                <p class="login-subtitle">Acesse sua conta</p>
            </div>

            @if (LoginViewModel.HasError)
            {
                <div class="alert alert-danger" role="alert">
                    @LoginViewModel.ErrorMessage
                </div>
            }

            <EditForm Model="LoginViewModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="login-field">
                    <label for="email">Email</label>
                    <InputText id="email" class="login-input" @bind-Value="LoginViewModel.Email" />
                    <ValidationMessage For="() => LoginViewModel.Email" />
                </div>

                <div class="login-field">
                    <label for="password">Senha</label>
                    <InputText id="password" type="password" class="login-input" @bind-Value="LoginViewModel.Password" />
                    <ValidationMessage For="() => LoginViewModel.Password" />
                </div>

                <button type="submit" class="login-button w-100" disabled="@LoginViewModel.IsLoading">
                    @if (LoginViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Entrando...</span>
                    }
                    else
                    {
                        <span>Entrar</span>
                    }
                </button>

                <div class="login-extra">
                    <a href="#" @onclick="ForgotPassword">Esqueceu a senha?</a>
                </div>
            </EditForm>

            <div class="login-footer">© @(DateTime.Now.Year) DockQueue</div>
        </div>
    </div>
</section>

@code
{
    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            _nav.NavigateTo("/home");
        }
    }

    private async Task HandleValidSubmit()
    {
        LoginViewModel.IsLoading = true;
        LoginViewModel.ClearError();

        try
        {
            var success = await AuthService.LoginAsync(LoginViewModel);

            if (success)
            {
                _nav.NavigateTo("/home");
            }
            else
            {
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            LoginViewModel.SetError($"Erro inesperado: {ex.Message}");
            StateHasChanged();
        }
        finally
        {
            LoginViewModel.IsLoading = false;
        }
    }

    private async Task ForgotPassword()
    {
        await SWA.Aviso(Swal, "Recuperação de senha em breve.");
    }
}